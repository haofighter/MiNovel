<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:clipChildren="false"
    android:fitsSystemWindows="true"
    tools:context=".moudle.activity.MiContentActivity">


    <com.hao.minovel.view.RoundLinearLayout
        android:id="@+id/viewpager_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="true"></androidx.viewpager.widget.ViewPager>
    </com.hao.minovel.view.RoundLinearLayout>

    <com.hao.minovel.view.recycleviewhelp.MiRecycleView
        android:id="@+id/content_mune"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:orientation="vertical"></com.hao.minovel.view.recycleviewhelp.MiRecycleView>
</androidx.drawerlayout.widget.DrawerLayout>