<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".moudle.activity.MiContentActivity">

    <com.hao.minovel.view.RoundLayout
        android:id="@+id/mi_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/title_item"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/book_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/shuji_black"
                    android:transitionName="book" />

                <ImageView
                    android:id="@+id/stack"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/setting"
                    android:src="@mipmap/shop" />

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/setting" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mi_book_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_item"
            android:background="@color/white" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/search"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="30dp"
            android:scaleType="centerInside"
            android:src="@mipmap/search"
            app:backgroundTint="@color/white"
            app:elevation="10dp"
            app:fabSize="normal"
            app:rippleColor="@color/gray" />

        <FrameLayout
            android:id="@+id/fl_warn"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:background="#70000000">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="marquee"
                android:gravity="center"
                android:singleLine="true"
                android:text="所有小说来源均来自各个网站，本APP仅提供转载服务"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_warn_close"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:paddingLeft="13dp"
                android:paddingRight="8dp"
                android:src="@mipmap/icon_close" />
        </FrameLayout>
    </com.hao.minovel.view.RoundLayout>

    <com.hao.minovel.view.recycleviewhelp.MiRecycleView
        android:id="@+id/content_mune"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:orientation="vertical"></com.hao.minovel.view.recycleviewhelp.MiRecycleView>
</androidx.drawerlayout.widget.DrawerLayout>