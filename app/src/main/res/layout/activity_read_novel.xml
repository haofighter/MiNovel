<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/read_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.ReadNovelActivity">


        <com.hao.minovel.view.minovelread.PullViewLayout
            android:id="@+id/novel_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/read_novel_page" />

        </com.hao.minovel.view.minovelread.PullViewLayout>

        <include layout="@layout/readbook_config" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/mune"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="22dp">

            <ImageView
                android:id="@+id/back_to_main"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/shuji_black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>